<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="100dp"
    app:cardCornerRadius="@dimen/very_small"
    app:cardElevation="@dimen/very_small"
    app:cardUseCompatPadding="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/small"
        android:layout_marginLeft="@dimen/medium"
        android:layout_marginRight="@dimen/medium"
        android:layout_marginTop="@dimen/small"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fav_icon"
            android:layout_width="@dimen/extra_large"
            android:layout_height="@dimen/extra_large"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_star_border_black_24dp" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/small"
            android:layout_toLeftOf="@id/fav_icon"
            android:layout_weight="1"
            android:text="Use name"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_normal"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/user_name"
            android:layout_toLeftOf="@id/fav_icon"
            android:text="Message"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_normal" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
